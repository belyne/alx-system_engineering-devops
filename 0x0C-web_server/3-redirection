#!/usr/bin/env bash
# This script configures Nginx to perform a 301 redirect from /redirect_me to another page.

# Create a temporary configuration file
echo "location /redirect_me {
    return 301 https://www.example.com;
}" | sudo tee /etc/nginx/sites-available/temp_redirect

# Link the temporary configuration file
sudo ln -s /etc/nginx/sites-available/temp_redirect /etc/nginx/sites-enabled/

# Reload Nginx to apply changes
sudo nginx -s reload

echo "Redirection configured successfully."
